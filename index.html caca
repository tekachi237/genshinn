  <script>
    let score = 0;
    const reponses = [];

    function initReponses() {
      // D√©fi 1
      reponses[0] = { correct: true, feedback: "Bonne r√©ponse : G√©rer les ressources mat√©rielles et offrir une interface utilisateur." };
      reponses[1] = { correct: false, feedback: "Faux. La bonne r√©ponse est : G√©rer les ressources mat√©rielles et offrir une interface utilisateur." };
      
      // D√©fi 2
      reponses[2] = { correct: true, feedback: "Bonne r√©ponse : L'application r√©sout un probl√®me, le syst√®me g√®re le mat√©riel." };
      reponses[3] = { correct: false, feedback: "Faux. La bonne r√©ponse est : L'application r√©sout un probl√®me, le syst√®me g√®re le mat√©riel." };
      
      // ... Initialiser toutes les autres r√©ponses ...
    }

    function melangerReponses() {
      // M√©langer l'ordre des r√©ponses pour chaque question
      for (let i = 0; i < reponses.length; i += 2) {
        if (Math.random() > 0.5) {
          // √âchanger les r√©ponses
          const temp = reponses[i];
          reponses[i] = reponses[i+1];
          reponses[i+1] = temp;
        }
      }
    }

    function afficherJeu(id) {
      document.querySelectorAll('.jeu').forEach(j => j.classList.remove('visible'));
      const cible = document.getElementById(id);
      if (cible) {
        cible.classList.add('visible');
      }
    }

    function valider(btn, bonneReponse, message) {
      const result = btn.parentElement.parentElement.querySelector('.resultat');
      if (!result) return;

      if (bonneReponse) {
        result.textContent = "‚úÖ " + message;
        result.style.color = "#2ecc71";
        score++;
        const scoreElem = document.getElementById("score");
        scoreElem.textContent = score;
        scoreElem.classList.add("animate");
        setTimeout(() => scoreElem.classList.remove("animate"), 400);
      } else {
        result.textContent = "‚ùå " + message;
        result.style.color = "#e74c3c";
      }

      setTimeout(() => {
        const current = btn.closest(".jeu");
        if (!current) return;

        const currentNum = parseInt(current.id.replace("jeu", ""));
        const nextNum = currentNum + 1;
        const next = document.getElementById("jeu" + nextNum);

        if (next) {
          current.classList.remove("visible");
          next.classList.add("visible");
        } else {
          current.classList.remove("visible");
          const scoreFinal = document.getElementById("score_final");
          if (scoreFinal) {
            document.getElementById("final_score").textContent = score;
            scoreFinal.classList.add("visible");
          }
        }
      }, 1000);
    }

    function retourMenu() {
      document.querySelectorAll('.jeu').forEach(j => j.classList.remove('visible'));
    }

    function afficherPartie(id) {
      const bloc = document.getElementById(id);
      bloc.style.display = bloc.style.display === "none" ? "block" : "none";
    }

    // Initialiser et m√©langer les r√©ponses au chargement
    window.onload = function() {
      initReponses();
      melangerReponses();
    };
  </script>
